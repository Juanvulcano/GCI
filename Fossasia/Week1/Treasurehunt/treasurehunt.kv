<GridEntry>:
   font_size: self.height
<content>:
   font_size: self.height  
<Interface>:
   orientation: 'vertical'
   BoxLayout:
      size_hint: (0.3, 0.3)
      orientation: 'horizontal'
      SelectSizePopup:
         id: wow
         title: "Choose your difficulty"
         size_hint: (1, 1)
         BoxLayout:
            orientation: 'vertical' 
            GridLayout:
               title: "Level"
               cols: 3
               Button:
                  text: '4X4'
                  on_press: wow.select(4), board.reset()
               Button:
                  text: '5X5'
                  on_press: wow.select(5), board.reset()
               Button:
                  text: '6X6'
                  on_press: wow.select(6), board.reset()
               Button:
                  text: '9X9'
                  on_press: wow.select(9), board.reset()
               Button:
                  text: '12X12'
                  on_press: wow.select(12), board.reset()
               Button:
                  text: '15X15'
                  on_press: wow.select(15), board.reset()
      Button:
         size_hint: (0.6, 0.5)
         text: 'Reset'
         on_press: board.reset()
   AnchorLayout:
      anchor_y: 'bottom'
      anchor_x: 'left'
      TreasureHuntGrid:
         id: board
         size: min(self.parent.size), min(self.parent.size)
         size_hint: (None, 0.8)
      Label:
         size_hint: (0.5, 1.9)
         height: sp(40)
         text:'You have {} attempts left'.format(board.attempts)
      Label:
         size_hint: (0.5, 1.7)
         height: sp(40)
         text: "You have found {} of 9 treasures!".format(board.treasuresfound)
      

<TreasureHuntGrid>:
   cols: self.value

